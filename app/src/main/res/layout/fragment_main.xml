<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:text="보유"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="가상 자산"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/amountTtap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="#999999"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="TTAP"
                android:textColor="#43B0DD"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/grayColor"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="[공지] 가상자산 사업자 관련하여 공식 입장 안내..."
            android:textColor="#121212"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ttapWalletCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center|left"
            android:includeFontPadding="false"
            android:paddingStart="18dp"
            android:text="TTAP 지갑 만들기"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColor" />

        <TextView
            android:id="@+id/btcWalletCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center|left"
            android:includeFontPadding="false"
            android:paddingStart="18dp"
            android:text="BTC 지갑 만들기"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColor" />

        <TextView
            android:id="@+id/usdWalletCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center|left"
            android:includeFontPadding="false"
            android:paddingStart="18dp"
            android:text="USDT 지갑 만들기"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColor" />

        <TextView
            android:id="@+id/connectFlyBit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center|left"
            android:includeFontPadding="false"
            android:paddingStart="18dp"
            android:text="Flybit 지갑 연동하기"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColor" />


    </LinearLayout>
</layout>