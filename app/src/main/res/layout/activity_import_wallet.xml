<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#262626"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="18dp"
            android:src="@drawable/back_btn_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:text="시드구문 불러오기"
            android:textColor="@color/white"
            android:textSize="34dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="구문을 올바른 순서로 입력해주세요"
            android:textColor="#43B0DD"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/key" />

        <EditText
            android:id="@+id/seeds"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:hint="구문 입력"
            android:gravity="start"
            android:layout_marginEnd="18dp"
            android:background="#373737"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="#999999"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:text="※ TTAP Wallet에서는 시드 구문을 보관하지 않기 때문에\n
     분실 및 유출로 인한 손해를 책임지지 않습니다."
            android:textColor="#999999"
            android:textSize="14dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="15dp"
            android:textColor="#DD4343"/>

        <Button
            android:id="@+id/importBtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#43B0DD"
            android:fontFamily="@font/notosanskr_regular"
            android:text="지갑 불러오기"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>
</layout>