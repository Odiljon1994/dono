            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Timestamp"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/date"
