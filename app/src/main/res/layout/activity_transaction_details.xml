                android:layout_gravity="center"
                android:padding="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/copy_btn"
                app:tint="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
